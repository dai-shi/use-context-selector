{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "use-context-selector": ["./src"]
    },
    "outDir": "./dist"
  }
}
